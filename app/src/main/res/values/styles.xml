<resources>
    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <declare-styleable name="CustomTextView">
        <attr name="setFont" format="enum">
            <enum name="Regular" value="0" />
            <enum name="RegularItalic" value="1" />
            <enum name="Bold" value="2" />
            <enum name="BoldItalic" value="3" />
            <enum name="Heavy" value="4" />
            <enum name="HeavyItalic" value="5" />
            <enum name="Light" value="6" />
            <enum name="LightItalic" value="7" />
            <enum name="Medium" value="8" />
            <enum name="MediumItalic" value="9" />
            <enum name="Semibold" value="10" />
            <enum name="SemiboldItalic" value="11" />
            <enum name="Icons" value="12" />
        </attr>
    </declare-styleable>

    <string-array name="FontNames">
        <item>SF-Pro-Text-Regular.ttf</item>
        <item>SF-Pro-Text-RegularItalic.ttf</item>
        <item>SF-Pro-Text-Bold.ttf</item>
        <item>SF-Pro-Text-BoldItalic.ttf</item>
        <item>SF-Pro-Text-Heavy.ttf</item>
        <item>SF-Pro-Text-HeavyItalic.ttf</item>
        <item>SF-Pro-Text-Light.ttf</item>
        <item>SF-Pro-Text-LightItalic.ttf</item>
        <item>SF-Pro-Text-Medium.ttf</item>
        <item>SF-Pro-Text-MediumItalic.ttf</item>
        <item>SF-Pro-Text-Semibold.ttf</item>
        <item>SF-Pro-Text-SemiboldItalic.ttf</item>
        <item>Oral-App.ttf</item>
    </string-array>

    <!--    Text styles starts-->
    <style name="small_text">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="setFont">Light</item>
    </style>

    <style name="small_text_regular">
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="setFont">Regular</item>
    </style>

    <style name="small_text_semi_bold">
